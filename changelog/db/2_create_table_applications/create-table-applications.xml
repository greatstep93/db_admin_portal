<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

  <changeSet author="greatstep" id="db_applications_1">
    <sql>create schema db_applications</sql>
  </changeSet>

  <changeSet author="greatstep" id="db_applications_2">
    <createTable tableName="applications" schemaName="db_applications">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true"
          primaryKeyName="pk_systems_id"/>
      </column>
      <column type="varchar(255)" name="application_name"/>
      <column type="varchar(255)" name="application_status"/>
      <column type="varchar(255)" name="git_url"/>
      <column type="bigint" name="user_last_update_id"/>
      <column type="timestamptz" name="last_date"/>
    </createTable>

    <addForeignKeyConstraint
      baseTableSchemaName="db_applications"
      baseTableName="applications"
      baseColumnNames="user_last_update_id"
      constraintName="fk_user_id_applications_user_last_update_id"
      referencedTableSchemaName="db_users"
      referencedTableName="users"
      referencedColumnNames="id"/>
  </changeSet>

</databaseChangeLog>