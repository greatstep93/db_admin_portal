<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

  <changeSet author="greatstep" id="users_db_1">
    <sqlFile path="changelog/db/1_create-user_db/create-schema.sql"/>
    <rollback/>
  </changeSet>

  <changeSet author="greatstep" id="users_db_2">
    <createTable tableName="systems" schemaName="db_users">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true"
          primaryKeyName="pk_systems_id"/>
      </column>
      <column name="system_name" type="varchar(255)"/>
    </createTable>
  </changeSet>

  <changeSet author="greatstep" id="users_db_3">
    <createTable tableName="users" schemaName="db_users">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true"
          primaryKeyName="pk_user_id"/>
      </column>
      <column name="user_name" type="varchar(50)"/>
      <column name="password" type="varchar(50)"/>
      <column name="is_active" type="boolean"/>
      <column name="system_id" type="bigint"/>
    </createTable>
  </changeSet>

  <changeSet author="greatstep" id="users_db_4">
    <addForeignKeyConstraint
      baseTableSchemaName="db_users"
      baseTableName="users"
      baseColumnNames="system_id"
      constraintName="fk_system_system_id"
      referencedTableSchemaName="db_users"
      referencedTableName="systems"
      referencedColumnNames="id"/>
  </changeSet>

</databaseChangeLog>